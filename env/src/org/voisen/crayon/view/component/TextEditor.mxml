<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 creationComplete="init();">
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	<fx:Metadata>
		[Style(name="gutterStyleName", inherit="no", type="String")]
		[Style(name="editorStyleName", inherit="no", type="String")]
		[Event(name="openFileClick", type="org.voisen.crayon.view.component.event.TextEditorEvent")]
		[Event(name="saveClick", type="org.voisen.crayon.view.component.event.TextEditorEvent")]
	</fx:Metadata>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import org.voisen.crayon.view.component.model.TextEditorModel;
			
			private var model:TextEditorModel;
			
			private function init():void
			{
				model = new TextEditorModel( this );
			}
		]]>
	</fx:Script>
	<s:HGroup width="100%" height="100%" gap="0">
		<s:TextArea id="gutter" width="30" height="100%" styleName="{getStyle('gutterStyleName')}" />
		<s:TextArea id="editor" width="100%" height="100%" />
	</s:HGroup>
	<s:HGroup id="buttons" width="100%" bottom="10" paddingLeft="10" paddingRight="10">
		<s:Button id="openButton" label="Open ..." click="model.openFile();" />
		<s:Button id="saveButton" label="Save" />
		<mx:Spacer width="100%" />
		<s:Button id="runButton" label="Run" />
	</s:HGroup>
</s:Group>
