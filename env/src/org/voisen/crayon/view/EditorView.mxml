<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 xmlns:component="org.voisen.crayon.view.component.*">
	<s:layout>
		<s:BasicLayout/>
	</s:layout>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import org.voisen.crayon.view.model.EditorViewModel;
			
			[Inject]
			public var model:EditorViewModel;
		]]>
	</fx:Script>
	<component:TextEditor id="editor" width="100%" height="100%" gutterStyleName="editorGutter" editorStyleName="editor" />
	<s:HGroup id="buttons" width="100%" bottom="10" paddingLeft="10" paddingRight="10">
		<s:Button id="openButton" label="Open ..." click="model.openFile( editor );" />
		<s:Button id="saveButton" label="Save" />
		<mx:Spacer width="100%" />
		<s:Button id="runButton" label="Run" />
	</s:HGroup>
</s:Group>
