module Crayon
  module Parser

    grammar ControlFlow
      rule loop
        "repeat" space count:(number / var) space "times" counter:(space "with" space var)? space newline
          body:(expression space newline)*
        "end" <Loop>
        {
          def expressions
            body.elements.map {|e| e.expression} 
          end
        }
      end

    end

  end
end
