module Crayon
  module Parser

    grammar Events
      rule start_event
        "do" space function:identifier space "on" space event_name
      end

      rule stop_event
        "stop" space "doing" space function:identifier space "on" space event_name
      end

      rule event_name
        ("mouse" space ("up" / "down")) / "frame"
      end
    end

  end
end
