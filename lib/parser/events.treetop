module Crayon
  module Parser

    grammar Events
      rule start_event
        "do" space function:identifier space "on" space event_name <EventStart>
      end

      rule stop_event
        "stop" space "doing" space function:identifier space "on" space event_name <EventStop>
      end

      rule event_name
        mouse_event / "frame"
      end

      rule mouse_event
        "mouse" space "up" / "mouse" space "down"
      end
    end

  end
end
